---
import Link from "./icons/Link.astro";
import LinkButton from "./LinkButton.astro";

// Proyectos
const projects = [
  {
    image: "https://firebasestorage.googleapis.com/v0/b/jimcostdev-firebase.appspot.com/o/my-finances.webp?alt=media&token=5a713475-4680-4d39-82d3-64d193648e9c",
    title: "My Finances",
    description: "MyFinances es una aplicación web diseñada para la gestión integral de mis finanzas personales, creada específicamente para simplificar el seguimiento de mis ingresos y gastos. ",
    stack: ["React", "TypeScript", "Tailwind", "Node.js"],
    link: "#"
  },
  {
    image: "https://github.com/JimcostDev/game-spades-fixed/raw/master/src/assets/picas-fijas-juego.webp",
    title: "Juego de Picas y Fijas",
    description: "Juego de cartas clásico, donde los jugadores deben adivinar un número secreto basado en pistas.",
    stack: ["Next.js", "MongoDB", "Stripe", "Node.js"],
    link: "#"
  },
  {
    image: "https://github.com/JimcostDev/mongodb_developer_path/raw/master/imgs/mongodb.webp",
    title: "Recursos MongoDB",
    description: "Es un repositorio con ejercicios, apuntes y materiales esenciales para aprender MongoDB. Ideal para quienes buscan prepararse para la certificación MongoDB Associate Developer.",
    stack: ["MongoDB", "Markdown", "Python"],
    link: "#"
  }
];
---

<div class="flex flex-col gap-y-16">
  {projects.map(({ image, title, description, stack, link }) => (
    <article class="flex flex-col md:flex-row md:space-x-8 group relative">
      {/* Imagen del proyecto */}
      <div class="w-full md:w-5/12">
        <div class="relative flex flex-col items-center transition duration-500 ease-in-out transform shadow-xl overflow-hidden rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl  mb-3">
          <img
            alt={title}
            class="w-full h-auto sm:h-56 object-cover object-center transition-transform duration-500 ease-in-out md:h-full md:group-hover:scale-105"
            loading="lazy"
            src={image}
          />
        </div>
      </div>

      {/* Botón flotante */}
      {link && (
        <div class="absolute top-0 right-0 m-4">
          <LinkButton href={link}>
            <Link class="size-3 md:size-4" />
          </LinkButton>
        </div>
      )}

      {/* Contenido del proyecto */}
      <div class="w-full md:w-1/2 md:max-w-lg flex flex-col justify-between">
        <div>
          <h3 class="text-xl font-semibold text-gray-800 mt-2">{title}</h3>
          <ul class="flex flex-wrap mt-2 gap-2">
            {stack.map((tech) => (
              <li>
                <span class="flex items-center rounded-full text-xs bg-sky-200/60 text-gray-800 py-1 px-2">
                  # {tech}
                </span>
              </li>
            ))}
          </ul>
          <p class="mt-2 text-gray-500">{description}</p>
        </div>
      </div>
    </article>
  ))}
</div>