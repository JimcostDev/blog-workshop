---
import Layout from "../layouts/Layout.astro";
import LinkButton from "../components/LinkButton.astro";

const title = "Página no encontrada";
const description = "Lo sentimos, no podemos encontrar la página que estás buscando.";
const suggestion = "Regresar a la página principal";
---

<Layout title="404 - Página no encontrada">
  <main class="min-h-screen flex items-center justify-center px-4">
    <div class="max-w-4xl mx-auto text-center">
      <div class="mb-8 relative">
        <span class="text-7xl sm:text-9xl font-bold text-sky-500/20  animate-pulse">
          404
        </span>
        <div class="absolute inset-0 flex items-center justify-center">
          <svg class="h-32 w-32 text-sky-500 opacity-75" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
          </svg>
        </div>
      </div>

      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-4">
        {title}
      </h1>
      
      <p class="text-lg text-gray-600  mb-8 max-w-xl mx-auto">
        {description}
      </p>

      <div class="flex justify-center">
        <LinkButton href="/" target="_self">
          {suggestion}
          <svg class="w-5 h-5 ml-2 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/>
          </svg>
        </LinkButton>
      </div>
    </div>
  </main>
</Layout>